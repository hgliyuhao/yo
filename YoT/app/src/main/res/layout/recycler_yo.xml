<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout

        android:background="@drawable/ripple_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:showDividers="middle"
        android:weightSum="1">






            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/dang"
                android:id="@+id/imageView_send_tx"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S.s ."
                    android:textSize="20dp"
                    android:id="@+id/textView_send_id"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="7月25日"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:alpha="0.7"
                        android:id="@+id/textView_small"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="北京"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:alpha="0.7"
                    android:id="@+id/textView_distance"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView_sendyo"
            android:src="@mipmap/yo_send"
            android:layout_marginLeft="12dp"
            android:alpha="0.6"
            android:layout_marginTop="12dp" />


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#c6d9e4dc" />



</LinearLayout>
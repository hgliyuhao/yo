<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/card_view3"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="10dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="2dp"
        app:cardElevation="1dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="#f5d7d7"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" 手机"
                android:textSize="20dp"
                android:textColor="#8c8684"
                android:id="@+id/signup_textView_userId"
                android:layout_margin="5dp" />

            <EditText
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:hint="  请输入手机号"
                android:background="@null"
                android:textColorHint="#d2d0cf"
                android:ems="10"
                android:id="@+id/signup_editTex_userId"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:inputType="none"
                android:digits="0123456789"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/card_view5"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="10dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="2dp"
        app:cardElevation="1dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="false"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" 验证"
                android:textSize="20dp"
                android:textColor="#8c8684"
                android:id="@+id/textView_5"
                android:layout_margin="5dp" />

            <EditText
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:hint="  请输入验证码"
                android:inputType="none"
                android:digits="0123456789"
                android:textColorHint="#d2d0cf"
                android:background="@null"
                android:ems="11"
                android:id="@+id/signup_editTex_password"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:text="获取"
                android:textSize="12dp"
                android:textColor="#fa3d3d"
                android:background="@drawable/buttonstyle"
                android:id="@+id/button_getyanzheng"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/card_view4"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="10dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="2dp"
        app:cardElevation="1dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="#f5d7d7"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="@null"
                android:text=" 密码"
                android:textSize="20dp"
                android:textColor="#8c8684"
                android:id="@+id/signup_textView_mm"
                android:layout_margin="5dp" />

            <EditText
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:hint="  请输入密码"
                android:background="@null"
                android:textColorHint="#d2d0cf"
                android:ems="10"
                android:id="@+id/signup_editTex_mm"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:inputType="none"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/button_signup"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:background="#a1dec7" />

</LinearLayout>